{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "notification:default",
    "process:default",
    "updater:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    }
  ]
}